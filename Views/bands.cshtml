@{
    Layout="Shared/_layout.cshtml";
}


<h2>Bands</h2>

<h5>Add A Band</h5>
<form action="/band/new" method="post">
    <label for="name"> Band name:</label>
    <input id="name" name = "name" type = "text">
    <button type="submit" name="button" class="btn">Add!</button>
</form>


@if(@Model.Count < 0)
{
    foreach(var band in @Model)
    {
        <h4><a href="/band/@band.GetId()">@band.GetName()</a></h4>
    }
}
else
{
    <h4>There are no current bands.</h4>
}
