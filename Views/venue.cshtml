@{
    Layout="Shared/_layout.cshtml";
}

<div class="row valign-wrapper">
    <div class="col s6">
        <h2>@Model["venue"].GetName()</h2>
    </div>
    <div class="col s6">
        <div class="right">
            <form action="/venue/delete/@Model["venue"].GetId()" method="post">
                <input type="hidden" name="_method"  value="DELETE">
                <button type="submit" class="tiny material-icons">delete</button>
            </form>
            <form action="venue/delete/@Model["venue"].GetId()" method="post">
                <input type="hidden" name="_method"  value="UPDATE">
                <button type="submit" class="tiny material-icons" alt="edit">mode_edit</button>
            </form>
        </div>
    </div>
</div>

@if(@Model["bands"].Count < 0)
{
    foreach(var band in @Model["bands"])
    {
        <h4><a href="/band/@band.GetId()">@band.GetName()</a></h4>
    }
}
else
{
    <h4>No bands have yet played at this venue.</h4>
}
